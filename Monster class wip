class Monster:
    def __init__ (self,name,hp,attack):

        self.name = name
        self.hp = hp
        self.attack = attack

    def attack(self):
        print(f"{self.name} attacks you for {self.attack} damage!")

    def damage(self, value):
        self.hp -= value
        print(f"Your health has reduced by ({value}: {self.hp}")
