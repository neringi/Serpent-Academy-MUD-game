character_choices("new_user")

filename = "player_choices.json"


# writes to file - throws error if already created for player
def save_choices(choices, filename="player_choices.json"):
    try:
        with open("player_choices.json", "w") as file:
            json.dump(choices, file)
    except FileExistsError:
        pass


# loads file with choices - throws error if not found
def load_choices(filename="player_choices.json"):
    try:
        with open(filename, "r") as file:
            loaded_choices = json.load(file)
            return loaded_choices
    except FileNotFoundError:
        return {}


save_choices(questions_and_choices)

player_class = {
    ("Dragon", "Truck", "Might", "Mystery"): "Warrior",
    ("Unicorn", "Broom", "Bewitch", "Romance"): "Mage",
    ("Pixie", "On Foot", "Wits", "Fantasy"): "Trickster",
}

loaded_choices = {
    "question1": {
        # "choices": ["Dragon", "Unicorn", "Pixie"],
        "selected": {"A": "Dragon", "B": "Unicorn", "C": "Pixie"},
    },
    "question2": {
        # "choices": ["Truck", "Broom", "On Foot"],
        "selected": {"A": "Truck", "B": "Broom", "C": "On Foot"},
    },
    "question3": {
        # "choices": ["Might", "Bewitch", "Wits"],
        "selected": {"A": "Might", "B": "Bewitch", "C": "Wits"},
    },
    "question4": {
        # "choices": ["Mystery", "Romance", "Fantasy"],
        "selected": {"A": "Mystery", "B": "Romance", "C": "Fantasy"},
    }
}


def assign_class(loaded_choices):
    # string = 'hi'
    # print(string)

    char_freq = {}

    for question_key, question_info in loaded_choices.items():
        choices_selected = question_info["selected"]
        for choice in choices_selected.values():
            if choice in char_freq:
                char_freq[choice] += 1
            else:
                char_freq[choice] = 1

    # for i in users_choices:
    # if i in char_freq:
    # char_freq[i]=char_freq[i]+1
    # else:
    # char_freq[i] = 1

    result = max(char_freq, key=char_freq.get)

    print("debug - most freq character:", result)
    return result


player_class = assign_class(loaded_choices)

